extends layout

block content 


	if session && session.user
		if results
			a(href='/wall') Til baka
			p
			each result in results
				.entry
					.left
						.bold
							p= 'Dags: ' + result.create_date
							p= 'Notandi: ' + result.username
					.right
						.bold
							p= 'Færsla: '
						p= result.entry_text

		form(method='post' action= 'forum/blog')
			label(for="entry")
			p
			textarea(id="entry" name="entry", placeholder='Skrifaðu innlegg við þessa færslu').form-control
			input(type="submit" value="Vista").form-control

